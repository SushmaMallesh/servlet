<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>second-servlet</display-name>
  <welcome-file-list>
      
  <welcome-file>display.html</welcome-file>
  </welcome-file-list>
  <servlet>
 
  <servlet-name>searchServlet</servlet-name>
   <servlet-class>com.workz.secondServlet.SearchServlet</servlet-class>
   <load-on-startup>1</load-on-startup>
   </servlet>
   
   <servlet-mapping>
   <servlet-name>searchServlet</servlet-name>
  <url-pattern>/search</url-pattern>
   </servlet-mapping>
   
   <servlet>
  <servlet-name>updateServlet</servlet-name>
   <servlet-class>com.workz.secondServlet.UpdateServlet</servlet-class>
   <load-on-startup>1</load-on-startup>
   </servlet>
   
   <servlet-mapping>
   <servlet-name>updateServlet</servlet-name>
  <url-pattern>/update</url-pattern>
   </servlet-mapping>
   
  <servlet>
  <servlet-name>deleteServlet</servlet-name>
   <servlet-class>com.workz.secondServlet.DeleteServlet</servlet-class>
   <load-on-startup>1</load-on-startup>
   </servlet>
   
   <servlet-mapping>
   <servlet-name>deleteServlet</servlet-name>
  <url-pattern>/delete</url-pattern>
   </servlet-mapping>
   </web-app>